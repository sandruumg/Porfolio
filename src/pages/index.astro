---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Header from '../components/Header.astro';
import Badge from '../components/Badge.astro';
import LinkedIn from '../components/icons/LinkedIn.astro';
import GitHub from '../components/icons/GitHub.astro';
import Mail from '../components/icons/Mail.astro';
import Briefcase from '../components/icons/Briefcase.astro';
import Code from '../components/icons/Code.astro';
import SocialPill from '../components/SocialPill.astro';
import Experience from '../components/Experience.astro';
import Proyects from '../components/Proyects.astro';
---

<Layout 
	title="Porfolio de Sandra Muñoz - Desarrollador y Programador Web"
>
	<main class="px-4">
		<section class="w-full lg:w-[740px] mx-auto py-36 pb-20">
			<img class="rounded-full size-12 mb-4" src="/Memoji.png" alt="Sandra foto">
			<h1 class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10">
				Hey, soy Sandra! <a 
					href="https://www.linkedin.com/in/sandra-mu%C3%B1oz-garc%C3%ADa-585755272/"
					target="_blank"
					rel="noopener"
					class="flex justify-center items-center"
				>
					<Badge>Disponible para trabajar</Badge>
				</a>
			</h1>
			<h2 class="lg:text-2xl text-lg text-white opacity-80 text-wrap max-w-[700px]">
				<span>+2 años de experiencia.</span>
				<span class="text-yellow-100">Desarrolladora Web y Desarrolladora Técnica.</span>
				<span class="text-blue-200">De Madrid, España.</span>
				<span class="opacity-75"></span>Especializado en crear soluciones web únicas!
			</h2>

			<nav class="flex gap-4 mt-7 flex-wrap">
				<SocialPill href="https://www.linkedin.com/in/sandra-mu%C3%B1oz-garc%C3%ADa-585755272/">
					<LinkedIn class="size-4 md:size-6"/>
					LinkedIn 
				</SocialPill>
				<SocialPill href="https://github.com/sandruumg/">
					<GitHub class="size-4 md:size-6"/>
					GitHub
				</SocialPill>
				<SocialPill class="size-4 md:size-6" href="mailto:sandra.munoz.garcia99@gmail.com">
					<Mail />
					sandra.munoz.garcia99@gmail.com
				</SocialPill>
			</nav>

		</section>

		<section id="experiencia" class="w-full lg:w-[740px] mx-auto">
			<h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center ml-[-10px]">
				<Briefcase class="size-6"/>
				Experiencia Laboral
			</h2>
			<Experience></Experience>
		</section>

		<section id="proyectos" class="w-full lg:w-[740px] mx-auto">
		
			<h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center ml-[-10px]">
				<Code class="size-6"/>
				Proyectos
			</h2>
			<Proyects></Proyects>
		</section>
	</main>
</Layout>

