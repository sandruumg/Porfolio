---
interface Props {
    title: string
    description : string
    date: string
    company:string

}
const {title, description, date, company} = Astro.props;
---

    <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700">
        
    </div>
    <div class="grid grid-cols-5">
        <div class="col-span-2">
            <h5>{company}</h5>
            <time class="mb-1 text-sm font-normal leading-none text-gray-400">{date}</time>
        </div>
        <div class="col-span-3">
            <h3 class="text-lg font-semibold text-yellow-100 mb-2">{title}</h3>
            <p class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400">{description}</p>
        </div>
    </div>
